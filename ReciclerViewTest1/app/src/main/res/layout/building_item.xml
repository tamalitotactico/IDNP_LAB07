<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/building_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/edificio1"
        android:contentDescription="Imagen del edificio" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/building_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edificio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/building_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
